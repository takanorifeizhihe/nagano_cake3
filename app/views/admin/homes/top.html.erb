<h1>注文履歴一覧</h1>

<table class="table table-hover table-inverse">
  
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <!--<th>注文ステータス</th>-->
    </tr>
  </thead>
  <tbody>
    <% @order_infos.each do |order_info| %>
    <tr>
      <td>
        <%= link_to admin_order_info_path(order_info.id) do %>
          <%= order_info.created_at.strftime('%Y/%m/%d %H:%M') %>
        <% end %>
      </td>
      <td><%= order_info.customer.first_name %><%= order_info.customer.last_name %></td>
      <td>
        <%= order_info.order_details.sum(:amount) %>
      </td>
      <td><%= order_info.status_i18n %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @order_infos %>

