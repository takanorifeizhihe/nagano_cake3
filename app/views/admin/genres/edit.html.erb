<div class="container">
  <div class="row m-3"> 
    <h3>  
      <span class="bg-secondary px-2">ジャンル編集</span>
    </h3>
  </div>
  <div class="row m-3"> 
  <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
