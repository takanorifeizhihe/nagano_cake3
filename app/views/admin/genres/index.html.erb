<div class="container">
  <div class="row m-3"> 
    <h3>  
      <span class="bg-secondary px-2">ジャンル一覧・追加</span>
    </h3>
  </div>
  <div class="row m-3"> 
  <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
    <label for="genre_name">ジャンル名</label>　　
    <%= f.text_field :name %>　　
    <%= f.submit "新規登録", class:"btn btn-success" %>
  <% end %>
  </div>
  <div class="row m-3"> 
    <div class="col-4">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%= link_to edit_admin_genre_path(genre), class:'btn btn-success' do %>
                <label>編集する</label>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>