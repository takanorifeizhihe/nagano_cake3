<div class="container">  
   <div class="row m-3">
     <h3>
       <span class="bg-secondary px-2">
        <%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集
      </span>
     </h3>
    </div>
    <div class="row m-3">
      <div class="col-7">
        <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :'会員ID' %>  　　　　　　　
          <%= @customer.id %>
        </div>
        <div class="form-group">
          <%= f.label :'氏名' %>  　　　　　　　　
          <%= f.text_field :first_name %> <%= f.text_field :last_name %>
        </div>
        <div class="form-group">
          <%= f.label :'フリガナ' %>  　　　　　　
          <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %>
        </div>
        <div class="form-group">
          <%= f.label :'郵便番号' %>  　　　　　　
          <%= f.number_field :postal_code %>
        </div>
        <div class="form-group">
          <%= f.label :'住所' %>  　　　　　　　　
          <%= f.text_area :address %>
        </div>
        <div class="form-group">
          <%= f.label :'電話番号' %>  　　　　　　
          <%= f.number_field :telephone_number %>
        </div>
        <div class="form-group">
          <%= f.label :'メールアドレス' %>   　　　
          <%= f.email_field :email %>
        </div>
        <div class="form-group">
          <%= f.label :'会員ステータス' %>　　　
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '有効', value: true %>　
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '退会', value: false %>
        </div>
        <div class="form-group">
          <%= f.submit '変更を保持' %>
        </div>
        <% end %>
      </div>
    </div>
</div>