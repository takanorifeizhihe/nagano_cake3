<%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細

<%= form_with model: @customer do |f| %>
  <div class="field">
    <%= f.label :'会員ID' %>  <%= @customer.id %>
  </div>
  <div class="field">
    <%= f.label :'氏名' %>  <%= @customer.first_name %><%= @customer.last_name %>
  </div>
  <div class="field">
    <%= f.label :'フリガナ' %>  <%= @customer.first_name_kana %><%= @customer.last_name_kana %>
  </div>
  <div class="field">
    <%= f.label :'郵便番号' %>  <%= @customer.postal_code %>
  </div>
  <div class="field">
    <%= f.label :'住所' %>  <%= @customer.address %>
  </div>
  <div class="field">
    <%= f.label :'電話番号' %>  <%= @customer.telephone_number %>
  </div>
  <div class="field">
    <%= f.label :'メールアドレス' %>  <%= @customer.email %>
  </div>
  <div class="field">
    <%= f.label :'電話番号' %>  <%= @customer.telephone_number %>
  </div>
  <div class="field">
    <%= f.label :'会員ステータス' %>  
    <% if @customer.is_active == true %>
      <%= f.label :'有効' %>
    <% else %>
      <%= f.label :'退会済' %>
    <% end %>
  </div>
  
  <%= link_to edit_admin_customer_path(@customer.id) do %>
    <%= f.label :'編集する' %>
  <% end %>　
  
  <%= link_to admin_path do %>
    <%= f.label :'注文履歴一覧を見る' %>
  <% end %>
<% end %>