<div class="container">  
   <div class="row m-3">
     <h3>  
      <span class="bg-secondary px-2">
        <%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細
      </span>
     </h3>
    </div>
    <div class="row m-3">
      <div class="col-7">
        <%= form_with model: @customer do |f| %>
        <div class="form-group">
          <%= f.label :'会員ID' %>  　　　　　　　
          <%= @customer.id %>
        </div>
        <div class="form-group">
          <%= f.label :'氏名' %>  　　　　　　　　
          <%= @customer.first_name %><%= @customer.last_name %>
        </div>
        <div class="form-group">
          <%= f.label :'フリガナ' %>  　　　　　　
          <%= @customer.first_name_kana %><%= @customer.last_name_kana %>
        </div>
        <div class="form-group">
          <%= f.label :'郵便番号' %>  　　　　　　
          <%= @customer.postal_code %>
        </div>
        <div class="form-group">
          <%= f.label :'住所' %>  　　　　　　　　
          <%= @customer.address %>
        </div>
        <div class="form-group">
          <%= f.label :'電話番号' %>  　　　　　　
          <%= @customer.telephone_number %>
        </div>
        <div class="form-group">
          <%= f.label :'メールアドレス' %>   　　　
          <%= @customer.email %>
        </div>
        <div class="form-group">
          <%= f.label :'会員ステータス' %>　　　　
          <% if @customer.is_active == true %>
            <%= f.label :'有効',class:"text-success" %>
          <% else %>
            <%= f.label :'退会済',class:"text-secondary" %>
          <% end %>
        </div>
        <div class="form-group">  
          <%= link_to edit_admin_customer_path(@customer.id) do %>
            <%= f.label :'編集する' ,class:"btn btn-success "%>
          <% end %>　　
          <%= link_to admin_root_path do %>
            <%= f.label :'注文履歴一覧を見る', class:"btn btn-primary " %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
</div>  