<div class="container">
  <div class="row m-3"> 
    <h3>  
      <span class="bg-secondary px-2">商品編集</span>
    </h3>
  </div>
  
    <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
    <div class="form-group">
      <%= f.label "商品画像" %>  　　　　
      <%= f.file_field :image, accept: "image/*" %></br>
    </div>
    <div class="form-group">
      <%= f.label "商品名" %>　　           　　　 
      <%= f.text_field :name %></br>
    </div>
    <div class="form-group">
      <%= f.label "商品説明" %> 　　　　      
      <%= f.text_area :introduction, size:"20" %></br>
    </div>
    <div class="form-group">
      <%= f.label "ジャンル" %>  　　　　
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></br>
    </div>
    <div class="form-group">
      <%= f.label "税抜価格" %>  　　　　
      <%= f.text_field :price %>円</br>
    </div>
    <div class="form-group">
      <%= f.label "販売ステータス" %>  　
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '販売中', value: true %>　
      
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売停止中', value: false %>
    </div>
    <div class="form-group">
      <%= f.submit '変更を保持',class:"btn btn-success" %>
    </div>
    <% end %>
 
</div>