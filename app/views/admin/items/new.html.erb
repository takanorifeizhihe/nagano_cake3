
<h2>商品新規登録</h2>

<%= form_with model:@item,url:'/admin/items' do |f| %>
  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %></br>
  <h4>商品名</h4>
  <%= f.text_field :name %></br>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %></br>
  <h4>ジャンル</h4>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>選択して下さい</br>
  <h4>税抜価格</h4>
  <%= f.text_field :price, :value =>"1000"%>円</br>
  <h4>販売ステータス</h4>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active, '販売中', value: true %>
  
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active, '販売停止中', value: false %>

  <%= f.submit '新規登録' %>
<% end %>
  
