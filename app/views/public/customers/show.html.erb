<div class="container">
  <div class="row m-3"> 
    <h3>  
      <span class="bg-secondary px-2">マイページ</span>
    </h3>
  </div>
  <div class="row m-3">
    <div class="col-7">
      <div class="d-flex">
        <strong>登録情報</strong>　　
        <%= link_to edit_customer_path(@customer) do %>
          <span class="btn btn-success m-2">編集する</span>
        <% end %>
      </div>
      <table class="table table-hover table-inverse">
        <tbody class="border">
          <tr>
            <th class="bg-secondary">氏名</th>
            <td><%= @customer.first_name  %> <%= @customer.last_name %></td>
          </tr>
          <tr>
            <th class="bg-secondary">かな</th>
            <td><%= @customer.first_name_kana  %> <%= @customer.last_name_kana %></td>
          </tr>
          <tr>
            <th class="bg-secondary">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th class="bg-secondary">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="bg-secondary">電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th class="bg-secondary">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>

  <label>配送先</label>　　
  <%= link_to  addresses_path do %>
    <span class="btn btn-primary m-2">一覧を見る</span>
  <% end %></br>
  <label>注文履歴</label>　
  <%= link_to order_infos_path do %>
    <span class="btn btn-primary m-2">一覧を見る</span>
  <% end %>
