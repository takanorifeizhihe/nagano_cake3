<h2>会員情報編集</h2>

<%= form_with model: @customer,url: customers_my_page_path, method: :patch do |f| %>
  <h4>氏名</h4>
  <%= f.text_field :first_name %> <%= f.text_field :last_name %></br>
  <h4>フリガナ</h4>
  <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %></br>
  <h4>郵便番号</h4>
  <%= f.number_field :postal_code %></br>
  <h4>住所</h4>
  <%= f.text_area :address %></br>
  <h4>電話番号</h4>
  <%= f.number_field :telephone_number %></br>
  <h4>メールアドレス</h4>
  <%= f.email_field :email %></br>
  
  <%= f.submit '変更を保持' %></br>
  <%= link_to customers_unsubscribe_path do %>
    <span>退会する</span>
  <% end %>
<% end %>