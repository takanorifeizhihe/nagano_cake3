<div class="container">
  <div class="row m-3"> 
    <h3>  
      <span class="bg-secondary px-2">会員情報編集</span>
    </h3>
  </div>
  <div class="row m-3">
    <div class="col-7">
      <%= form_with model: @customer,url: customers_my_page_path, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :"氏名　　　　　" %>　
          <%= f.text_field :first_name %> <%= f.text_field :last_name %>
        </div>
        <div class="form-group">
          <%= f.label :"フリガナ　　　　" %>
          <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %>
        </div>
        <div class="form-group">
          <%= f.label :"郵便番号　　　" %>　
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group">
          <%= f.label :"住所　　　　　　" %>
          <%= f.text_area :address %>
        </div>
        <div class="form-group">
          <%= f.label :"電話番号　　　　" %>
          <%= f.text_field :telephone_number %>
        </div>
        <div class="form-group">
          <%= f.label :"メールアドレス　" %>
          <%= f.email_field :email %>
        </div>
        <div class="d-flex">  
          <%= f.submit '変更を保持' ,class:"btn btn-success"%>　
          <%= link_to customers_unsubscribe_path do %>
            <span class="btn btn-danger">退会する</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>