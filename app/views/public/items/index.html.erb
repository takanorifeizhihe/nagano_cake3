<p class="border">
  <span>ジャンル検索</span>
  <p class="border-top">
    <% @genres.each do |genre| %>
      <%= genre.name %></br>
    <% end %>
  </p>
</p>

<h1>商品一覧(全<%= @items.count %>件)</h1>
  <% @items.each do |item| %>
    <%= link_to item_path(item.id) do %>
      <%= image_tag item.get_image(80,80) %>
    <% end %></br>
    <%= item.name%></br>
    ¥<%= item.price%>円</br>
  <% end %>
  
  <%= paginate @items %>