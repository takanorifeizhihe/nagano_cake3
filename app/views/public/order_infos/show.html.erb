<h2>注文情報</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>注文日</th>
      <td>
        <%= @order_info.created_at.strftime('%Y/%m/%d') %>
      </td>
    </tr>
    <tr>
      <th>配送方法</th>
      <td>
        <%= @order_info.address %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td>
        <%= @order_info.payment_method %>
      </td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td>
        <%= @order_info.status_i18n %>
      </td>
    </tr>
</table>

<h2>請求情報</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品合計</th>
      <td>
        <%= @order_info.order_details.sum(:price).to_s(:delimited) %>
      </td>
    </tr>
    <tr>
      <th>配送料</th>
      <td>
        <%= @order_info.postage.to_s(:delimited) %>
      </td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td>
        <%= @order_info.billing_amount.to_s(:delimited) %>
      </td>
    </tr>  
</table>

<h2>注文内容</h2>
<table class="table table-hover table-inverse">
  <tr>
    <th>商品</th>
    <th>単価(税込)</th>
    <th>個数</th>
    <th>小計</th>
    <th></th>
  </tr>
  
  <% @order_details.each do |order_detail| %>
    <tr>
      <td>
        <%= order_detail.item.name %>
      </td>
      <>
      <td>
        <%= order_detail.with_tax_price %>
      </td>
      <td>
        <%= order_detail.amount %>
      </td>
      <td>
        <%= order_detail.subtotal %>
      </td>
    </tr>
  <% end %>
</table>