<h1>注文履歴一覧</h1>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
      <% @order_infos.each do |order_info| %>
      <tr>
        <td><%= order_info.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= order_info.address %>
        </td>
        <td>
          <%= order_info.name %>
        </td>
        <td><%= order_info.billing_amount.to_s(:delimited) %> </td>
        <td><%= order_info.status_i18n %></td>
        <td>
          <%= link_to "表示する", order_info_path(order_info), class:"btn btn-sm btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>