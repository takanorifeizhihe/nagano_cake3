<div class="container">
  <div class="row m-3"> 
    <h3>  
      <span class="bg-secondary px-2">配送先登録/一覧</span>
    </h3>
  </div>
  <form class="form-horizontal">
    <%= form_with model:@address, url: '/addresses', method: :post do |f| %>
      <div class="form-group">
        <%= f.label :'郵便番号(ハイフンなし)' %> 
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %><br />
      </div>
      <div class="form-group">
        <%= f.label :'住所　　　　　　　　　' %> 
        <%= f.text_area :address, autofocus: true, autocomplete: "address" %><br />
      </div>
      <div class="form-group">
        <%= f.label :'宛名　　　　　　　　　' %> 
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br />
      </div>
      <div class="form-group">
        <%= f.submit "新規登録",class:"btn btn-success" %>
      </div>
    <% end %>
  </form>
  <div class="row m-3">
    <div class="col-7">
      <table class="table table-hover table-inverse">
        <thead class="bg-secondary">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody class="border">
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address.id), method: :get,class:"btn btn-success" %>　
              <%= link_to "削除する", address_path(address.id), method: :delete,class:"btn btn-danger","data-confirm" => "本当に消しますか？" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>