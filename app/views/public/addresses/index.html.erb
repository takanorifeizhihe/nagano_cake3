<h2>配送先登録/一覧</h2>

<%= form_with model:@address, url: '/addresses', method: :post do |f| %>
  <div class="field">
    <%= f.label :'郵便番号(ハイフンなし)' %> 
    <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code" %><br />
  </div>
  
  <div class="field">
    <%= f.label :'住所' %> 
    <%= f.text_area :address, autofocus: true, autocomplete: "address" %><br />
  </div>
  
  <div class="field">
    <%= f.label :'宛名' %> 
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br />
  </div>
  
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集する", edit_address_path(address.id), method: :get %>
        <%= link_to "削除する", address_path(address.id), method: :delete,"data-confirm" => "本当に消しますか？" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>