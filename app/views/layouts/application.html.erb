<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake3</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/admin"><span>Logo</span></a>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
            <li>
              <%= link_to admin_items_path,class:'nav-link text-light' do %>
              <i class="fas fa-home"></i>
              <span>商品一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to admin_customers_path,class:'nav-link text-light' do %>
              <i class="fas fa-users"></i>
              <span>会員一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to admin_path,class:'nav-link text-light' do %>
              <i class="fas fa-book-open"></i>
              <span>注文履歴一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to admin_genres_path,class:'nav-link text-light' do %>
              <i class="fas fa-book-open"></i>
              <span>ジャンル一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_admin_session_path, method: :delete,class:'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i>
              <span>ログアウト</span>
              <% end %>
            </li>
            
            <% elsif customer_signed_in? %>
            
            <p class='nav-link text-light'>ようこそ<%= current_customer.first_name %>さん！</p>
            <li>
              <%= link_to customers_my_page_path,class:'nav-link text-light' do %>
              <i class="fas fa-users"></i>
              <span>マイページ</span>
              <% end %>
            </li>
            <li>
              <%= link_to items_path,class:'nav-link text-light' do %>
              <i class="fas fa-book-open"></i>
              <span>商品一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to cart_items_path,class:'nav-link text-light' do %>
              <i class="fas fa-book-open"></i>
              <span>カート</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_customer_session_path, method: :delete,class:'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i>
              <span>ログアウト</span>
              <% end %>
            
            <% else %>
            <li>
              <%= link_to about_path,class:'nav-link text-light' do %>
              <i class="fas fa-link"></i>
              <span>About</span>
              <% end %>
            </li>
            <li>
              <%= link_to admin_items_path,class:'nav-link text-light' do %>
              <i class="fas fa-home"></i>
              <span>商品一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_customer_registration_path,class:'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i>
              <span>新規登録</span>
              <% end %>
            </li>
            <li>
              <%= link_to customer_session_path,class:'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i>
              <span>ログイン</span>
              <% end %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
      </nav>
    </header>
    <%= render 'layouts/flash' %>
    <%= yield %>
  </body>
</html>
